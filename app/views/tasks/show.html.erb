<div class="page-header">
  <h1><%= "#{@checklist.name}"%></h1>
  <p><%="#{@checklist.description}"%></p>
  <br />
</div>
<table class="table table-striped">
  <tr class="info">
    <th>Task</th>
    <th>Description</th>
    <th align="center">Complete BIP</th>
    <th align="center">Complete MMT</th>
    <th>Completion Notes</th>
    <tbody>
      <% @task_items.sorted.each do |task_item| %>
        <tr id="row<%=task_item.id%>">
          <td>
            <%= task_item.checklist_item.check_name %>
          </td>
          <td>
            <%= task_item.checklist_item.check_description %>
          </td>
          <td align="center">
            <%= best_in_place task_item, :completed, as: :checkbox, collection: [raw("<i class='fa fa-square-o fa-lg'></i>"), raw("<i class='fa fa-check-square-o fa-lg'></i>")], :data => {:percent_complete => task_item.get_a_num} %>
          </td>
          <td>
            <%= task_item.completed %>
          </td>
          <td>
            <%= best_in_place task_item, :notes %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </tr>
</table>
<br />

<%= link_to "OKAY!", "#", onclick: "history.back(); return false", :class => 'btn btn-default' %>
